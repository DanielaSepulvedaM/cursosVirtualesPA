<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_3.xsd"
    version="2.3">
    
    <navigation-rule id="1">
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule id="2">
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>nuevoCurso</from-outcome>
            <to-view-id>/pages/curso/nuevoCurso.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule id="3">
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>listadoCursos</from-outcome>
            <to-view-id>/pages/curso/listadoCursos.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule id="4">
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>edicionCurso</from-outcome>
            <to-view-id>/pages/curso/edicionCurso.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule id="5">
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>editarEvaluacion</from-outcome>
            <to-view-id>/pages/evaluacion/editarEvaluacion.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule id="6">
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>indexPrincipal</from-outcome>
            <to-view-id>/pages/estudiante/indexPrincipal.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule id="7">
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>cursosInscritos</from-outcome>
            <to-view-id>/pages/estudiante/cursosInscritos.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule id="8">
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>noPuedeInscribirCurso</from-outcome>
            <to-view-id>/pages/estudiante/noPuedeInscribirCurso.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
  
    <application>
         <locale-config>
            <default-locale>es</default-locale>
        </locale-config>
        <resource-bundle>
            <base-name>mensajes</base-name>
            <var>msgs</var>
        </resource-bundle>
        <message-bundle>jsf</message-bundle>
    </application>
</faces-config>